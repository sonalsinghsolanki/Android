<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.example.android.musicalstructure"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".AllSongs"
            android:label="@string/all_songs_activity">
        </activity>
        <activity android:name=".Albums"
            android:label="@string/albums_activity">
        </activity>
        <activity android:name=".Artists"
            android:label="@string/artists_activity">
        </activity>
        <activity android:name=".Genre"
            android:label="@string/genre_activity">
        </activity>
        <activity android:name=".ScanMedia"
            android:label="@string/scan_media_activity">
        </activity>
        <activity android:name=".MyFavorites"
            android:label="@string/favorites_activity">
        </activity>
        <activity android:name=".Playlists"
            android:label="@string/play_lists_activity">
        </activity>
    </application>

</manifest>