<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_background"
    android:orientation="vertical"
    tools:context="com.example.android.indorecitytourapp.MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="169dp"
        android:layout_marginLeft="10dp"
        >
        <ImageView
            android:id="@+id/home_image_1"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/home_page_1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="36dp"
            android:layout_toEndOf="@+id/home_image_1"
            android:text="Map Location"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="Indore"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="City in India"
        android:textSize="16sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:text="@string/city_description"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Places to Visit"
        android:textSize="16sp"
        android:textStyle="bold"/>
    <RelativeLayout
        android:layout_width="324dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp">
        <Button
            android:id="@+id/showHistoricalPlaces"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:onClick="showHistoricalPlaces"
            android:text="@string/activity_history"/>
        <Button
            android:id="@+id/showMuseum"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/showHistoricalPlaces"
            android:layout_toRightOf="@+id/showHistoricalPlaces"
            android:onClick="showMuseum"
            android:text="@string/activity_museum"/>
        <Button
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/showMuseum"
            android:layout_toRightOf="@+id/showMuseum"
            android:onClick="showGardens"
            android:text="@string/activity_gardens"/>
        <Button
            android:id="@+id/button2"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/showHistoricalPlaces"
            android:onClick="showZoo"
            android:text="@string/activity_zoo"/>
        <Button
            android:id="@+id/button"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/showMuseum"
            android:layout_alignStart="@+id/showMuseum"
            android:layout_alignTop="@+id/button2"
            android:onClick="showTemples"
            android:text="@string/activity_temples"/>
    </RelativeLayout>
</LinearLayout>
